<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/viewSalesLeadName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:id="@+id/viewSalesLeadType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textColor="?android:textColorSecondary"
            android:layout_below="@id/viewSalesLeadName"/>

        <TextView
            android:id="@+id/viewSalesLeadPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textColor="?android:textColorSecondary"
            android:layout_below="@id/viewSalesLeadType"/>

        <TextView
            android:id="@+id/viewSalesLeadStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textColor="?android:textColorSecondary"
            android:layout_below="@id/viewSalesLeadPriority"/>

        <RatingBar
            android:id="@+id/viewSalesLeadRating"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewSalesLeadStatus"
            android:layout_centerHorizontal="true"
            android:isIndicator="true"
            android:padding="8dp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="68dp"
            android:layout_height="36dp"
            android:layout_below="@id/viewSalesLeadRating"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Törlés"
            android:textSize="8sp" />

        <Button
            android:id="@+id/modifyButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@id/deleteButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="Módosítás"
            android:textSize="8sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>